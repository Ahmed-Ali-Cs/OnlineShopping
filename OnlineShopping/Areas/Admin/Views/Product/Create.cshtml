@model ProductVM

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.Title" class="form-label p-1"></label>
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.Description" class="form-label p-1"></label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.ISBN" class="form-label p-1"></label>
            <input asp-for="Product.ISBN" class="form-control" />
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.Author" class="form-label p-1"></label>
            <input asp-for="Product.Author" class="form-control" />
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.ListPrice" class="form-label p-1"></label>
            <input asp-for="Product.ListPrice" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.Price" class="form-label p-1"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.Price50" class="form-label p-1"></label>
            <input asp-for="Product.Price50" class="form-control" />
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.Price100" class="form-label p-1"></label>
            <input asp-for="Product.Price100" class="form-control" />
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.ImageUrl" class="form-label p-1"></label>
            <input asp-for="Product.ImageUrl" class="form-control" />
            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="Product.CategoryId" class="form-label p-1"></label>
            <select asp-for="Product.CategoryId" class="form-select" asp-items="@Model.CategoryList">
                <option disabled selected>-- Select Category --</option>
            </select>

            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-secondary border">Back to List</a>
            </div>
        </div>


    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}