@model Category

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
       
        <div class="row mb-3 p-0 ">
            <label asp-for="Name" class="form-label p-1"></label>
            <input asp-for="Name" disabled class="form-control" />
           
        </div>
        <div class="row mb-3 p-0 ">
            <label asp-for="DisplayOrder" class="form-label p-1"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
          
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-secondary border">Back to List</a>
            </div>
        </div>


    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}